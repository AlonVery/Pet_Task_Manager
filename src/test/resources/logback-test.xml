<configuration>
    <root level="WARN">
        <appender-ref ref="STDOUT"/>
    </root>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss} %-5level %logger - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Глушим Hikari -->
    <logger name="com.zaxxer.hikari" level="WARN"/>
</configuration>